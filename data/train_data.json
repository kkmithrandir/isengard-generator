  {
    "gherkin": "I hover over {element}",
    "playwright": "await page.hover('{element}')"
  },
  {
    "gherkin": "I check the URL contains {text}",
    "playwright": "await expect(page).toHaveURL(/.*{text}.*/)"
  },
  {
    "gherkin": "I drag {source} to {target}",
    "playwright": "await page.dragAndDrop('{source}', '{target}')"
  },
  {
