[
  {
    "gherkin": "I navigate to {url}",
    "playwright": "await page.goto('{url}')"
  },
  {
    "gherkin": "I see {text} in the title",
    "playwright": "await expect(page).toHaveTitle('{text}')"
  },
  {
    "gherkin": "I click {button} button",
    "playwright": "await page.click('button:has-text(\"{button}\")')"
  },
  {
    "gherkin": "I see {text} in the results",
    "playwright": "await expect(page.locator('.search-results')).toContainText('{text}')"
  },
  {
