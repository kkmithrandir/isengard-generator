  {
    "gherkin": "I uncheck the {checkbox} checkbox",
    "playwright": "await page.uncheck('input[name=\"{checkbox}\"]')"
  },
  {
    "gherkin": "I choose {option} from the {group} radio buttons",
    "playwright": "await page.check('input[name=\"{group}\"][value=\"{option}\"]')"
  },
  {
    "gherkin": "I navigate back",
    "playwright": "await page.goBack()"
  },
  {
    "gherkin": "I navigate forward",
